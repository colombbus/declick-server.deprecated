{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('tangara_user_forgotten_password') }}" method="POST" class="fos_user_resetting_request content-form" role="form">
    <div class="form-group">
        {% if invalid_username is defined %}
            <div class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
        {% endif %}
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" name="username" required="required" class="form-control"/>
    </div>
        
    <button type="submit" class="btn btn-primary">{{ 'resetting.request.submit'|trans }} </button>
</form>
